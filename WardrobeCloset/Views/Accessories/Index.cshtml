@model IEnumerable<WardrobeCloset.Models.Accessory>

@{
    ViewBag.Title = "Index";
}
@*Section that shows the page name and includes a button to create a new item*@
    <div class="row">
        <div class="col-lg-12 indexheader">
            <h2>Accessories</h2>
            <p>
                <button type="button">@Html.ActionLink("Add Accessories", "Create")</button>
            </p>
        </div>
    </div>
    @*Section that contains forloop to display each item of this type*@
    <div class="row text-center indexcontent">
        @foreach (var item in Model)
        {
            <div class="col-md-4 tops">
                <div class="thumbnail">
                    <img src="@Url.Content(item.Photo)" />
                    <div class="caption">
                        <p><strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(modelItem => item.Name)
                        <p><strong>@Html.DisplayNameFor(model => model.ClothingType):</strong> @Html.DisplayFor(modelItem => item.ClothingType)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Favorite):</strong> @Html.DisplayFor(modelItem => item.Favorite)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Dirty):</strong> @Html.DisplayFor(modelItem => item.Dirty)</p>
                        @*Bootstrap Component 3: glyphicons for edit, details, delete*@
                        <p>| <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Html.ActionLink("Edit", "Edit", new { id = item.AccessoriesID }) |</p>
                        <p>| <span class="glyphicon glyphicon-tags" aria-hidden="true"></span> @Html.ActionLink("Details", "Details", new { id = item.AccessoriesID }) |</p>
                        <p>  | <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Html.ActionLink("Delete", "Delete", new { id = item.AccessoriesID }) |</p>

                    </div>
                </div>
            </div>
        }
    </div>


