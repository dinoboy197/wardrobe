@model IEnumerable<WardrobeCloset.Models.Outfit>

@{
    ViewBag.Title = "Index";
}
<div class="container-fluid outfit">
    <div class="row">
        <div class="col-lg-12 indexheaderoutfit">
            <h2>Outfits</h2>
            <p>
                <button type="button">@Html.ActionLink("Add Outfit", "Create")</button>
            </p>
        </div>
    </div>

    @*Section that contains forloop to display each item of this type*@
    <div class="row text-center indexcontent">
        @foreach (var item in Model)
        {
            <div class="col-md-4 tops">
                <div class="thumbnail outfitthumb">
                    <div class="caption">
                        <p><strong>@Html.DisplayFor(modelItem => item.OutfitName)</strong></p>
                        <p><strong>@Html.DisplayNameFor(model => model.Accessory):</strong> @Html.DisplayFor(modelItem => item.Accessory.Name)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Bottom):</strong> @Html.DisplayFor(modelItem => item.Bottom.Name)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Sho):</strong> @Html.DisplayFor(modelItem => item.Sho.Name)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Top):</strong> @Html.DisplayFor(modelItem => item.Top.Name)</p>
                        @*Bootstrap Component 3: glyphicons for edit, details, delete*@
                        <p>| <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Html.ActionLink("Edit", "Edit", new { id = item.OutfitsID })  |</p>
                        <p>| <span class="glyphicon glyphicon-tags" aria-hidden="true"></span> @Html.ActionLink("Details", "Details", new { id = item.OutfitsID }) |</p>
                        <p>  | <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> @Html.ActionLink("Delete", "Delete", new { id = item.OutfitsID }) |</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>